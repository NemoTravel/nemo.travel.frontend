// Colors
$nemo-color-text-main = $nemo-color-text-main;
$nemo-color-text-main_hover = lighten($nemo-color-text-main, 5);
$nemo-color-text-secondary = $nemo-color-text-secondary;
$c_ui_textDisabled = $nemo-color-text-disabled;
$c_ui_textErr = $nemo-color-notification_error;

// FONTS
$f_ui_font_family = "Roboto", "Open Sans", sans-serif;

* {
	margin: 0;
}

html, body {
	height: 100%;
}

body {
	background-color: $nemo-color-LightPoint;
	font-family: $f_ui_font_family;
}

.clearfix:before, .clearfix:after {
	content: "\0020";
	display: block;
	height: 0;
	visibility: hidden;
}

.clearfix:after {
	clear: both;
}

.clearfix {
	zoom: 1;
}

.nemo-common-pageWrapper {
	margin: 0 auto;
	min-height: 100%;
	padding-bottom: 100px;
}

@media (max-width: 600px) {
	.nemo-common-pageWrapper {
		margin: 0 auto;
		min-height: 100%;
		padding-bottom: 145px;
	}
}
