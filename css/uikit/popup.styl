$c_ui_popup_wrapprer_bg = rgba(#636467, 0.5);

.ui-dialog {
	overflow: hidden;
	position: absolute;
	outline: 0 none;
	padding: 10px;
	z-index: 100;
	border: none;

	&__wrapper {
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		overflow: auto;
		position: fixed;

		background: $c_ui_popup_wrapprer_bg;
	}

	&_medium {
		@media (max-width: 750px) {
			width: 100% !important;
			max-width: 100% !important;
			height: 100% !important;
			border-radius: 0 !important;
			padding: 0;

			.ui-dialog-titlebar {
				border-radius: 0;
			}
			.ui-dialog-content {
				overflow: auto !important;
				height: 100% !important;
				padding-bottom: 30px !important;
			}

			.ui-dialog-buttonpane {
				position: fixed;
				bottom: 0;
				width: 100%;
			}
		}
	}

	&_large {
		@media (max-width: 750px) {
			width: 100% !important;
			max-width: 100% !important;
			height: 100% !important;
			border-radius: 0 !important;

			.ui-dialog-titlebar {
				border-radius: 0;
			}

			.ui-dialog-content {
				overflow: auto !important;
				height: 100% !important;
				padding-bottom: 60px !important;
			}
		}
	}

	&_scroll {
		.ui-dialog-content{
			overflow-y: auto;
			max-height: 600px;
		}
	}
	&__open {
		overflow: hidden;

		&_iphone {
			overflow-y: scroll; 
			-webkit-overflow-scrolling: touch;
			position: fixed;
			height: 100%;
			width: 100%;
		}
	}

	&-title {
		position: relative;
		z-index: 2;
	}

	&-titlebar {
		position: relative;
		background: #EEEEEE;
		border: none;
		color: $nemo-color-text-main;
		padding: 10px 60px 10px 20px;
		line-height: 30px;
		overflow: hidden;
		white-space: nowrap;
		text-overflow: ellipsis;
		border-radius: 4px 4px 0 0;

		&-close {
			position: absolute;
			top: 10px;
			right: 10px;
			width: 30px;
			height: 30px;
			border-radius: 4px;
			background: transparent url(images/ui/popup-close.svg) center center no-repeat;
			border: none;
			text-indent: -10000px;
			overflow: hidden;
			cursor: pointer;
			z-index: 2;

			outline: none;
			box-shadow: none;
			transition: all .2s;

			&:hover {
				background: transparent url(images/ui/popup-close.svg) center center no-repeat;
				background-color: rgba(#000, 0.05);
			}

			&:focus {
				background: transparent url(images/ui/popup-close.svg) center center no-repeat;
				box-shadow: none;
			}
			&:focus:hover {
				background: transparent url(images/ui/popup-close.svg) center center no-repeat;
				box-shadow: none;
			}
		}

		&_progress {
			color: #fff;
			background: #7F7F7F;

			&:before {
				content: '';
				position: absolute;
				z-index: 0;
				top: 0;
				left: 0;
				bottom: 0;
				background: $nemo-color-main;
				animation: nemo-ui-popup__progressAnimation 200s 1 forwards;
				border-radius: 4px 0 0 4px;
			}
		}
	}

	&-content {
		background: $nemo-color-LightPoint;
		border: 0 none;
		overflow: auto;
		padding: 20px;
		position: relative;
		border-radius: 0 0 4px 4px;
	}

	& &-content,
	&-content {
		&_iframe,
		&:not(.nemo-flights-results__fareFamilies__popup__contents):not(.nemo-authPopup):not(.nemo-registrationPopup):not(.nemo-authPopup_restorepass):not(.new-flightRoute__legPopupWrapper):not(.nemo-flights-results__flightsGroup__flightInfo):not(.new-bookStatus-dialog__content) {
			overflow: auto !important;
			-webkit-overflow-scrolling: touch;
			//overflow-scrolling: touch;
			//-webkit-transform: translateZ(0px);
		}

		&_iframe iframe {
			height: 102% !important;
		}
	}

	&-buttons &-content {
		border-radius: 0;
	}

	&-buttonpane {
		padding: 10px 20px;
		text-align: right;
		background: #EEEEEE;
		overflow: hidden;
		border-radius: 0 0 4px 4px;

		.ui-button {
			@extend .nemo-ui-button;

			margin: 0 15px 0 0;

			&:last-child {
				margin: 0;
			}

			&_secondary {
				// The only place float is allowed due to our inability to change buttonpane templating
				float: left;
				font-size: 13px;
			}

			&_pseudoLink {
				&, &:hover, &:active, &:focus {
					line-height: normal!important;
					padding: 0!important;
					box-shadow: none!important;
					background: transparent!important;
				}
			}

			&_pseudoLink .ui-button-text {
				@extend .nemo-ui-pseudoLink;
				line-height: normal;
			}
		}
	}
}

@keyframes nemo-ui-popup__progressAnimation {
	0% {width: 0%;}
	5% {width: 80%;}
	100% {width: 100%;}
}

@keyframes nemo-ui-button__progressAnimation {
	0% {width: 0%;}
	25% {width: 60%;}
	100% {width: 100%;}
}
